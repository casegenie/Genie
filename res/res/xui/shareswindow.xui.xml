<xui>
    <title value="Shares Manager" image="gfx/icons/alliance.png"/>
    <body>
        <popupmenu id="popupTree" detached="yes">
            <menuitem image="gfx/icons/add.png" text="Add to share" eventid="addshare"/>
        </popupmenu>
        <popupmenu id="popupList" detached="yes">
            <menuitem image="gfx/icons/remove.png" text="Remove from share" eventid="removeshare"/>
            <menuitem image="gfx/icons/editgroup.png" text="Locate in directory tree" eventid="locate"/>
            <menu id="addgroup" image="gfx/icons/editgroup.png" text="Add to group">
                <menuitem image="gfx/icons/editgroup.png" text="Add new group" eventid="addnewgroup"/>
            </menu>
            <menu id="removegroup" image="gfx/icons/editgroup.png" text="Remove from group">
                <menuitem image="gfx/icons/editgroup.png" text="Set to Public" eventid="settopublic"/>
            </menu>
        </popupmenu>
        <panel axis="y" width="640" height="480" minwidth="640" minheight="480" border="0">
            <panel axis="x" border="0">
                <panel axis="y" border="0">
                    <scrollpanel width="310" minwidth="310" scrollbars="optional" bordertype="etched" bordertitle="Shared folders:">
                        <list expand="both" id="sharesListSelected"/>
                    </scrollpanel>
                    <panel axis="x" expand="horiz" bordertype="etched" bordertitle="Options:">
                        <panel axis="y" border="0">
                            <checkbox id="public" text="Allow public"/>
                            <checkbox id="cache" text="Allow cache"/>
                        </panel>
                        <filler axis="x"/>
                    </panel>
                </panel>
                <scrollpanel width = "310" minwidth = "310" scrollbars="optional" bordertype="etched" bordertitle="Select what folders you want to share:">
                    <tree expand="both" id="sharesTreeBrowse"/>
                </scrollpanel>
            </panel>
            <panel border="5" axis="x" expand="horiz">
                <filler axis="x"/>
                <button width="85" eventid="ok" text="OK"/>
                <strut width="5"/>
                <button width="85" eventid="cancel" text="Cancel"/>
            </panel>
        </panel>
    </body>
</xui>