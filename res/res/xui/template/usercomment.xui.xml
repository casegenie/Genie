<xui>
    <title value="Error Report"/>
    <body>
        <panel axis="y">
            <panel axis="x" border="3">
                <mlabel html="yes">
                    In your own words, please describe what you did when the error happened.
                    [p]
                    User comment:
                </mlabel>
            </panel>
            <strut height="5"/>
            <scrollpanel width="400" height="100" bordertype="lowered">
                <textarea text="" id="ta"/>
            </scrollpanel>
            <panel axis="x" border="0, 5, 0, 0" >
                <filler/>
                <button id="ok" text="OK" action="dispose" width="75"/>
                <strut width="5"/>
                <button id="cancel" text="Cancel" action="dispose" width="75"/>
            </panel>
        </panel>
    </body>
</xui>
